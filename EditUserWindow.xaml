<Window
    x:Class="OfficeFlow.EditUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Nutzer bearbeiten"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Alter Nutzername  -->
        <Grid Grid.ColumnSpan="2" Margin="70,0,70,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Alter Nutzername:" />
            <!--  Input  -->
            <Label
                Name="UsernameLabel"
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />
        </Grid>

        <!--  Neuer Nutzername  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="70,0,70,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Neuer Nutzername:" />
            <!--  Input  -->
            <TextBox
                Name="UsernameTextBox"
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                MaxLength="20" />
        </Grid>

        <!--  Passwort 1  -->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="70,0,70,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Neues Passwort:" />
            <!--  Input  -->
            <PasswordBox
                Name="PasswordBox1"
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                MaxLength="20" />
        </Grid>

        <!--  Passwort 2  -->
        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="70,0,70,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Neues Passwort:" />
            <!--  Input  -->
            <PasswordBox
                Name="PasswordBox2"
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                MaxLength="20" />
        </Grid>

        <!--  Adminrechte  -->
        <Grid
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="70,0,70,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Adminrechte:" />
            <!--  Input  -->
            <CheckBox
                Name="AdminCheckBox"
                Margin="0,0,105,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />
        </Grid>

        <!--  Speichern und Abbrechen Button  -->
        <Button
            Name="SafeButton"
            Grid.Row="5"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="SafeButton_Click"
            Content="Speichern" />
        <Button
            Name="AbortButton"
            Grid.Row="7"
            Grid.Column="1"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="AbortButton_Click"
            Content="Abbrechen" />
    </Grid>
</Window>
