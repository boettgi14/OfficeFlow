<Window
    x:Class="OfficeFlow.AddAppointmentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="OfficeFlow - Termin hinzufügen"
    Width="600"
    Height="350"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Name  -->
        <Grid Grid.ColumnSpan="2" Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="*Name:" />
            <!--  Input  -->
            <TextBox
                Name="NameTextBox"
                Width="300"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />
        </Grid>

        <!--  Beschreibung  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Beschreibung:" />
            <!--  Input  -->
            <TextBox
                Name="DescriptionTextBox"
                Width="300"
                Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                AcceptsReturn="True"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Startdatum  -->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="*Startdatum:" />
            <!--  Input  -->
            <xctk:DateTimePicker
                Name="StartDateDateTimePicker"
                Width="300"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Format="Custom"
                FormatString="dd.MM.yyyy HH:mm"
                Minimum="{x:Static sys:DateTime.Today}" />
        </Grid>

        <!--  Enddatum  -->
        <Grid
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="*Enddatum:" />
            <!--  Input  -->
            <xctk:DateTimePicker
                Name="EndDateDateTimePicker"
                Width="300"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Format="Custom"
                FormatString="dd.MM.yyyy HH:mm"
                Minimum="{x:Static sys:DateTime.Today}" />
        </Grid>

        <!--  Speichern und Abbrechen Button  -->
        <Button
            Name="SafeButton"
            Grid.Row="4"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="SafeButton_Click"
            Content="Speichern" />
        <Button
            Name="AbortButton"
            Grid.Row="4"
            Grid.Column="1"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="AbortButton_Click"
            Content="Abbrechen" />

        <!--  Pflichtfeld Hinweis  -->
        <TextBlock
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="right"
            VerticalAlignment="bottom"
            FontSize="11"
            Text="* Felder mit dieser Markierung sind erforderlich" />

    </Grid>
</Window>
