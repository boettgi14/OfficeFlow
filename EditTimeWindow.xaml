<Window
    x:Class="OfficeFlow.EditTimeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="OfficeFlow - Zeiterfassung bearbeiten"
    Width="600"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Startzeit  -->
        <Grid Grid.ColumnSpan="2" Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="*Startzeit:" />
            <!--  Input  -->
            <xctk:DateTimePicker
                Name="StartDateTimePicker"
                Width="250"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Format="Custom"
                FormatString="dd.MM.yyyy HH:mm" />
        </Grid>

        <!--  Endzeit  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="*Endzeit:" />
            <!--  Input  -->
            <xctk:DateTimePicker
                Name="EndDateTimePicker"
                Width="250"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Format="Custom"
                FormatString="dd.MM.yyyy HH:mm" />
        </Grid>

        <!--  Pausenzeit  -->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="80,0,80,0">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="*Pausenzeit (HH:mm):" />
            <!--  Stunden  -->
            <xctk:IntegerUpDown
                Name="HoursIntegerUpDown"
                Width="125"
                Margin="0,0,125,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Minimum="0" />
            <!--  Minuten  -->
            <xctk:IntegerUpDown
                Name="MinutesIntegerUpDown"
                Width="125"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Maximum="59"
                Minimum="0" />
        </Grid>

        <!--  Speichern und Abbrechen Button  -->
        <Button
            Name="SafeButton"
            Grid.Row="4"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="SafeButton_Click"
            Content="Speichern" />
        <Button
            Name="AbortButton"
            Grid.Row="3"
            Grid.Column="1"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="AbortButton_Click"
            Content="Abbrechen" />

        <!--  Pflichtfeld Hinweis  -->
        <TextBlock
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="right"
            VerticalAlignment="bottom"
            FontSize="11"
            Text="* Felder mit dieser Markierung sind erforderlich" />

    </Grid>
</Window>
