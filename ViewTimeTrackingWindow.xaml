<Window
    x:Class="OfficeFlow.ViewTimeTrackingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Übersicht Zeiterfassung"
    Width="400"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <!--  Für Nutzerliste  -->
            <ColumnDefinition Width="2*" />
            <!--  Für Buttons  -->
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="13*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  Zeitenliste  -->
        <ListBox
            Name="TimesListBox"
            Grid.RowSpan="3"
            Margin="5"
            KeyDown="TimesListBox_KeyDown"
            SelectionChanged="TimesListBox_SelectionChanged" />

        <!--  Buttons für Zeitenverwaltung  -->
        <Button
            Name="EditTimeButton"
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="EditTimeButton_Click"
            Content="Bearbeiten" />
        <Button
            Name="DeleteTimeButton"
            Grid.Row="1"
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="DeleteTimeButton_Click"
            Content="Löschen" />

        <!--  Schließen Button  -->
        <Button
            Name="CloseButton"
            Grid.Row="3"
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="CloseButton_Click"
            Content="Schließen" />
    </Grid>
</Window>
