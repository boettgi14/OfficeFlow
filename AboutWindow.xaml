<Window
    x:Class="OfficeFlow.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Über OfficeFlow"
    Width="600"
    Height="400"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Beschreibung  -->
        <TextBlock
            Margin="20"
            Text="OfficeFlow ist eine Anwendung zur Verwaltung von Arbeitszeiten, Pausenzeiten, Terminen und Aufgaben. Entwickelt mit WPF und C#, bietet es eine benutzerfreundliche Oberfläche für effizientes Zeitmanagement im Büro, im Home Office oder im unorganisierten Studentenleben."
            TextWrapping="Wrap" />

        <!--  OK Button  -->
        <Button
            Grid.Row="3"
            Width="125"
            Height="25"
            Margin="20"
            HorizontalAlignment="right"
            Click="Ok_Click"
            Content="OK" />
    </Grid>
</Window>
