<Window
    x:Class="OfficeFlow.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Einstellungen"
    Width="400"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Allgemein  -->
        <Label
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Allgemein"
            FontWeight="Bold" />
        <Button
            Name="ResetSettingsButton"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Width="200"
            Height="25"
            HorizontalAlignment="Center"
            Click="ResetSettingsButton_Click"
            Content="Alle Einstellungen zurücksetzen" />

        <!--  Zeitmanagement  -->
        <Label
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Zeiterfassung"
            FontWeight="Bold" />
        <!--  Automattischer Start und Ende  -->
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Automatischer Start/Stopp:" />
        <CheckBox
            Name="AutomaticTimeTrackingCheckBox"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="AutomaticTimeTrackingCheckBox_Click" />

        <!--  Termine  -->
        <Label
            Grid.Row="4"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Termine"
            FontWeight="Bold" />
        <!--  Export nach Outlook  -->
        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Export nach Outlook:" />
        <CheckBox
            Name="ExportAppointmentsToOutlookCheckBox"
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="ExportAppointmentsToOutlookCheckBox_Click" />
        <!--  Löschen von Exports  -->
        <Button
            Name="DeleteExportedAppointmentsButton"
            Grid.Row="6"
            Grid.ColumnSpan="2"
            Width="300"
            Height="25"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="DeleteExportedAppointmentsButton_Click"
            Content="Alle exportierten Termine aus Outlook löschen" />

        <!--  Aufgaben  -->
        <Label
            Grid.Row="7"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Aufgaben"
            FontWeight="Bold" />
        <!--  Export nach Outlook  -->
        <Label
            Grid.Row="8"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Export nach Outlook:" />
        <CheckBox
            Name="ExportTasksToOutlookCheckBox"
            Grid.Row="8"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="ExportTasksToOutlookCheckBox_Click" />
        <!--  Löschen von Exports  -->
        <Button
            Name="DeleteExportedTasksButton"
            Grid.Row="9"
            Grid.ColumnSpan="2"
            Width="300"
            Height="25"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="DeleteExportedTasksButton_Click"
            Content="Alle exportierten Aufgaben aus Outlook löschen" />

        <!--  Schließen Button  -->
        <Button
            Name="CloseButton"
            Grid.Row="10"
            Grid.Column="1"
            Width="125"
            Height="25"
            Margin="10"
            HorizontalAlignment="Right"
            Click="CloseButton_Click"
            Content="Schließen" />
    </Grid>
</Window>
