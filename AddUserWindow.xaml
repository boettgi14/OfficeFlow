<Window
    x:Class="OfficeFlow.AddUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Nutzer hinzufügen"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Nutzername  -->
        <Grid Grid.ColumnSpan="2">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Nutzername: " />
            <!--  Input  -->
            <TextBox
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                MaxLength="20"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Passwort  -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Passwort: " />
            <!--  Input  -->
            <TextBox
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                MaxLength="20"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Adminrechte  -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <!--  Label  -->
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Adminrechte: " />
            <!--  Input  -->
            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" />
        </Grid>

        <!--  OK und Abbrechen Button  -->
        <Button
            Grid.Row="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="OK_Click"
            Content="OK" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Abort_Click"
            Content="Abbrechen" />
    </Grid>
</Window>
