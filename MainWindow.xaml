<Window
    x:Class="OfficeFlow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow"
    MinWidth="800"
    MinHeight="450"
    WindowState="Maximized"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <!--  Für Menüleiste  -->
            <RowDefinition Height="Auto" />
            <!--  Für Wochenkalender und Aufgabenliste  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!--  Für Wochenkalender  -->
            <ColumnDefinition Width="3*" />
            <!--  Für Aufgabenliste  -->
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Menüleiste  -->
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="_Menü">
                <MenuItem
                    Name="SettingsMenuItem"
                    Click="SettingsMenuItem_Click"
                    Header="_Einstellungen" />
                <MenuItem
                    Name="UserManagementMenuItem"
                    Click="UserManagementMenuItem_Click"
                    Header="Nutzerverwaltung"
                    IsEnabled="False" />
                <Separator />
                <MenuItem
                    Name="LogOutMenuItem"
                    Click="LogOutMenuItem_Click"
                    Header="_Ausloggen" />
                <MenuItem
                    Name="EndProgramMenuItem"
                    Click="EndProgramMenuItem_Click"
                    Header="_OfficeFlow beenden" />
            </MenuItem>
            <MenuItem Header="_Zeitmanagement">
                <MenuItem Header="_TODO" />
            </MenuItem>
            <MenuItem Header="_Termine">
                <MenuItem Header="_Hinzufügen" />
                <MenuItem
                    Name="EditAppointmentMenuItem"
                    Header="_Bearbeiten"
                    IsEnabled="False" />
                <MenuItem
                    Name="DeleteAppointmentMenuItem"
                    Header="_Löschen"
                    IsEnabled="False" />
            </MenuItem>
            <MenuItem Header="_Aufgaben">
                <MenuItem Header="_Hinzufügen" />
                <MenuItem
                    Name="EditTaskMenuItem"
                    Header="_Bearbeiten"
                    IsEnabled="False" />
                <MenuItem
                    Name="DeleteTaskMenuItem"
                    Header="_Löschen"
                    IsEnabled="False" />
            </MenuItem>
            <MenuItem Header="_Hilfe">
                <MenuItem
                    Name="InstructionsMenuItem"
                    Click="InstructionsMenuItem_Click"
                    Header="_Kurzanleitung" />
                <MenuItem
                    Name="GitHubMenuItem"
                    Click="GitHubMenuItem_Click"
                    Header="_GitHub" />
                <Separator />
                <MenuItem
                    Name="AboutMenuItem"
                    Click="AboutMenuItem_Click"
                    Header="_Über OfficeFlow..." />
            </MenuItem>
        </Menu>

        <!--  Kalender  -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <!--  Für Wochentage  -->
                <RowDefinition Height="Auto" />
                <!--  Für Kalenderinhalt  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Wochentage  -->
            <UniformGrid
                Margin="5"
                Columns="7"
                Rows="1">
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Montag"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Dienstag"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Mittwoch"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Donnerstag"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Freitag"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Samstag"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Sonntag"
                    TextAlignment="Center" />
            </UniformGrid>

            <!--  Kalenderinhalt  -->
            <UniformGrid
                Grid.Row="1"
                Margin="5"
                Columns="7"
                Rows="1">
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
                <Border
                    Padding="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Termin..." />
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>

        <!--  Aufgabenliste  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">
            <Grid.RowDefinitions>
                <!--  Für Titel  -->
                <RowDefinition Height="Auto" />
                <!--  Für Listeninhalt  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Titel  -->
            <TextBlock
                Margin="5"
                FontSize="18"
                FontWeight="Bold"
                Text="Aufgaben"
                TextAlignment="Center" />

            <!--  Listeninhalt  -->
            <Border
                Grid.Row="1"
                Margin="5"
                Padding="5"
                BorderBrush="Gray"
                BorderThickness="1">
                <ItemsControl Name="TasksStackPanel">
                    <TextBlock Text="Aufgabe..." />
                </ItemsControl>
            </Border>
        </Grid>
    </Grid>
</Window>