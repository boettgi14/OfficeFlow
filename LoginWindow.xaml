<Window
    x:Class="OfficeFlow.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Nutzerlogin"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Width="auto"
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Nutzername: " />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="190"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            TextWrapping="Wrap" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Width="auto"
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Passwort: " />
        <PasswordBox
            Grid.Row="2"
            Grid.Column="1"
            Width="190"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
        <Button
            Grid.Row="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Login_Click"
            Content="Einloggen" />
    </Grid>
</Window>