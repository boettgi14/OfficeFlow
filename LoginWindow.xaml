<Window
    x:Class="OfficeFlow.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Nutzerlogin"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Nutzername  -->
        <Grid Margin="50,0,50,10" VerticalAlignment="Bottom">
            <!--  Label  -->
            <Label
                Width="auto"
                Height="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Nutzername:" />
            <!--  Input  -->
            <TextBox
                Name="UsernameTextBox"
                Width="190"
                Height="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                MaxLength="20"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Passwort  -->
        <Grid
            Grid.Row="1"
            Margin="50,10,50,0"
            VerticalAlignment="Top">
            <!--  Label  -->
            <Label
                Width="auto"
                Height="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Passwort:" />
            <!--  Input  -->
            <PasswordBox
                Name="PasswordBox"
                Width="190"
                Height="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                MaxLength="20" />
        </Grid>

        <!--  Loginbutton  -->
        <Button
            Name="LoginButton"
            Grid.Row="2"
            Width="125"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="LoginButton_Click"
            Content="Einloggen" />
    </Grid>
</Window>