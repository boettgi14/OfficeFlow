<Window
    x:Class="OfficeFlow.UserManagementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OfficeFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OfficeFlow - Nutzerverwaltung"
    Width="400"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Layout  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <!--  Für Nutzerliste  -->
            <ColumnDefinition Width="2*" />
            <!--  Für Buttons  -->
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="12*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  Nutzerliste  -->
        <ListBox
            Name="ListBox"
            Grid.RowSpan="4"
            Margin="5" />

        <!--  Buttons für Nutzerverwaltung  -->
        <Button
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="AddUser_Click"
            Content="Hinzufügen" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Bearbeiten"
            IsEnabled="False" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Löschen"
            IsEnabled="False" />

        <!--  OK und Abbrechen Button  -->
        <Button
            Grid.Row="4"
            Width="125"
            Height="25"
            Margin="0,0,5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="Ok_Click"
            Content="OK" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Width="125"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Abort_Click"
            Content="Abbrechen" />
    </Grid>
</Window>
